<div class="bg-white">
    <nav class="flex flex-col sm:flex-row justify-center">
        <button class="tablinks text-gray-600 py-4 px-6 block hover:text-indigo-500 focus:outline-none" onclick="openTab(event, 'main')">
            Main
        </button>
        
        <button class="tablinks text-gray-600 py-4 px-6 block hover:text-indigo-500 focus:outline-none" onclick="openTab(event, 'users')">
            Users
        </button>

        <button class="tablinks text-gray-600 py-4 px-6 block hover:text-indigo-500 focus:outline-none" onclick="openTab(event, 'listings')">
            Listings
        </button>

        <button class="tablinks text-gray-600 py-4 px-6 block hover:text-indigo-500 focus:outline-none">
             4
        </button>
    </nav>
</div>

<div id="main" class="tabcontent">
    <h1><%= @user.name %></h1>
    <h3><%= @user.username %></h3>

    <p><strong>Role:</strong> <%= @user.role.name %></p>

    <% if current_user.id == @user.id %>
        <%= link_to 'Edit Profile', edit_user_path(current_user), class: 'button' %>
    <% end %>

    <%= link_to 'New Listing', new_listing_path %>
</div>

<div id="users" class="tabcontent" style="display:none">

</div>

<div id="listings" class="tabcontent" style="display:none">

</div>

<script>
function openTab(evt, tabName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" text-indigo-500 border-b-2 font-medium border-indigo-500", "");
  }
  document.getElementById(tabName).style.display = "block";
  evt.currentTarget.className += " text-indigo-500 border-b-2 font-medium border-indigo-500";
}
</script>