<header class="text-gray-200 body-font bg-gray-900">
  <div class="md:container md:mx-auto flex flex-wrap p-5 flex-col md:flex-row justify-center">

    <a class="flex title-font font-medium text-left md:items-center text-gray-900 mb-0 md:ml-0 ml-0 tex-gray-200">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewBox="0 0 24 24">
        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
      </svg>
      <span class="ml-3 text-xl text-gray-200">Aus JDM Parts</span>
    </a>

    <input type="checkbox" id="menu-toggle" class="hidden">
        <label for="menu-toggle" class="nav-btn lg:hidden">
        <i></i>
        <i></i>
        <i></i>
    </label>

    <nav class="menu absolute md:relative top-20 md:top-0 lg:left-0 md:ml-auto z-20 flex flex-col md:flex-row md:space-x-6 font-semibold w-full md:w-auto bg-gray-900 md:rounded-none text-center md:shadow-none p-6 pt-0 md:p-0 h-screen lg:h-full transition duration-500 ease-in-out">
        <%= link_to "Parts", listings_path, class: 'mr-5 hover:text-gray-300 border-b-2 border-transparent hover:border-purple-700 cursor-pointer transition-all ease duration-500 my-2' %>

        <% if user_signed_in? %>
        <% else %>
            <%= link_to "Login", new_user_session_path, class: 'mr-5 hover:text-gray-300 border-b-2 border-transparent hover:border-purple-700 cursor-pointer transition-all ease duration-500 my-2' %>
            <%= link_to "Sign Up", new_user_registration_path, class: 'inline-flex items-center bg-gray-200 hover:bg-gray-300 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0 text-gray-900' %>
        <% end %>
        <% if user_signed_in? %>
            <%= link_to "Logout", destroy_user_session_path, class: 'mr-5 hover:text-gray-300 border-b-2 border-transparent hover:border-purple-700 cursor-pointer transition-all ease duration-500 my-2', method: :delete %>
        <% end %>
    </nav>

  </div>
</header>